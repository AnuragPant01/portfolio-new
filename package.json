{
  "name": "anurag-pant-portfolio",
  "version": "1.0.0",
  "description": "Anurag Pant's Full-Stack Developer Portfolio",
  "main": "index.html",
  "scripts": {
    "dev": "live-server --port=3000 --open=/",
    "build": "npm run clean && npm run copy && npm run minify-css && npm run minify-js",
    "clean": "rimraf dist",
    "copy": "copyfiles -u 0 \"*.html\" dist && copyfiles -u 0 \"css/*\" dist && copyfiles -u 0 \"js/*\" dist && copyfiles -u 0 \"assets/*\" dist",
    "minify-css": "cleancss -o dist/css/styles.min.css css/styles.css",
    "minify-js": "terser js/script.js -o dist/js/script.min.js --compress --mangle",
    "serve": "live-server dist --port=3000 --open=/",
    "deploy": "npm run build && echo 'Build completed! Deploy dist/ folder to your hosting service.'"
  },
  "keywords": [
    "portfolio",
    "full-stack",
    "developer",
    "angular",
    "react",
    "nodejs",
    "web-development"
  ],
  "author": "Anurag Pant",
  "license": "MIT",
  "devDependencies": {
    "clean-css-cli": "^5.6.2",
    "copyfiles": "^2.4.1",
    "imagemin-cli": "^7.0.0",
    "live-server": "^1.2.2",
    "rimraf": "^5.0.5",
    "terser": "^5.24.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/anuragpant/portfolio.git"
  },
  "homepage": "https://anuragpant.dev"
} 